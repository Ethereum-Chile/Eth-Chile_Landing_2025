---
import {
    ContainerScroll,
    ContainerSticky,
    GalleryContainer,
    GalleryCol,
    ContainerStagger,
    ContainerAnimated,
} from "./ContainerScroll";
import SocialMediaIcons from "./SocialMediaIcons.tsx";
---

<section class="bg-custom-black">
    <ContainerScroll client:load>
        <ContainerSticky>
            <div class="flex flex-col items-center justify-center h-full">
                <ContainerStagger className="text-center mb-2 mt-2">
                    <ContainerAnimated>
                        <h2
                            class="text-4xl md:text-6xl font-raleway font-bold mb-1 text-white"
                        >
                            Join the Web3 Community in Chile
                        </h2>
                    </ContainerAnimated>
                    <ContainerAnimated>
                        <p
                            class="text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto mb-1"
                        >
                            Join the growing ecosystem of builders, innovators,
                            and leaders
                        </p>
                    </ContainerAnimated>
                    <ContainerAnimated>
                        <SocialMediaIcons client:load />
                    </ContainerAnimated>
                </ContainerStagger>
            </div>
        </ContainerSticky>
    </ContainerScroll>
</section>
