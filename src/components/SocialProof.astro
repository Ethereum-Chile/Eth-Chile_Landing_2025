---
import {
  ContainerScroll,
  ContainerSticky,
  GalleryContainer,
  GalleryCol,
  ContainerStagger,
  ContainerAnimated,
} from "./ContainerScroll";
import SocialMediaIcons from "./SocialMediaIcons.tsx";
import { LogoCarousel } from "./LogoCarousel.tsx";
import { HyperText } from "./HyperText.tsx";
---

<section class="min-h-screen bg-custom-black">
  <ContainerScroll client:load>
    <ContainerSticky>
      <div class="flex flex-col items-center justify-center h-full">
        <ContainerStagger className="text-center mb-8 mt-8">
          <ContainerAnimated>
            <h2
              class="text-4xl md:text-6xl font-raleway font-bold mb-4 text-white"
            >
              Join the Web3 Community in Chile
            </h2>
          </ContainerAnimated>
          <ContainerAnimated>
            <p class="text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto">
              Join the growing ecosystem of builders, innovators, and leaders
            </p>
          </ContainerAnimated>
          <ContainerAnimated>
            <SocialMediaIcons client:load />
          </ContainerAnimated>
        </ContainerStagger>

        <!-- Apply to Speak Section -->
        <ContainerStagger className="mt-12 mb-8">
          <ContainerAnimated>
            <div class="text-center">
              <h3 class="text-2xl md:text-3xl font-raleway font-semibold text-white mb-6">
                Apply to Speak
              </h3>
              <div class="max-w-2xl mx-auto px-8 md:px-0">
                <form class="space-y-6 mb-8">
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <input
                      type="text"
                      placeholder="First name"
                      class="border border-white bg-transparent p-3 rounded text-white placeholder-white focus:outline-none focus:border-blue-400"
                    />
                    <input
                      type="text"
                      placeholder="Last name"
                      class="border border-white bg-transparent p-3 rounded text-white placeholder-white focus:outline-none focus:border-blue-400"
                    />
                  </div>
                  <input
                    type="email"
                    placeholder="Email"
                    class="border border-white bg-transparent p-3 rounded text-white placeholder-white focus:outline-none focus:border-blue-400 w-full"
                  />
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <input
                      type="text"
                      placeholder="Organization / Company / Project"
                      class="border border-white bg-transparent p-3 rounded text-white placeholder-white focus:outline-none focus:border-blue-400"
                    />
                    <input
                      type="text"
                      placeholder="Role"
                      class="border border-white bg-transparent p-3 rounded text-white placeholder-white focus:outline-none focus:border-blue-400"
                    />
                  </div>
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <input
                      type="text"
                      placeholder="Twitter / X"
                      class="border border-white bg-transparent p-3 rounded text-white placeholder-white focus:outline-none focus:border-blue-400"
                    />
                    <input
                      type="text"
                      placeholder="LinkedIn"
                      class="border border-white bg-transparent p-3 rounded text-white placeholder-white focus:outline-none focus:border-blue-400"
                    />
                  </div>
                  
                  <!-- Interested in sponsoring & Talk Track -->
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <select class="border border-white bg-transparent p-3 rounded text-white focus:outline-none focus:border-blue-400">
                      <option value="" class="bg-gray-900">Interested in sponsoring?</option>
                      <option value="yes" class="bg-gray-900">Yes</option>
                      <option value="no" class="bg-gray-900">No</option>
                    </select>
                    <select class="border border-white bg-transparent p-3 rounded text-white focus:outline-none focus:border-blue-400">
                      <option value="" class="bg-gray-900">Talk Track</option>
                      <option value="defi" class="bg-gray-900">DeFi & Tokenization</option>
                      <option value="infrastructure" class="bg-gray-900">Infrastructure & Scaling</option>
                      <option value="ai-web3" class="bg-gray-900">AI & Web3 Integration</option>
                      <option value="regulation" class="bg-gray-900">Regulation & Compliance</option>
                      <option value="developer" class="bg-gray-900">Developer Tools</option>
                      <option value="ux" class="bg-gray-900">UX & Adoption</option>
                      <option value="sustainability" class="bg-gray-900">Sustainability & Impact</option>
                      <option value="other" class="bg-gray-900">Other</option>
                    </select>
                  </div>
      
                  <input
                    type="text"
                    placeholder="Talk title"
                    class="border border-white bg-transparent p-3 rounded text-white placeholder-white focus:outline-none focus:border-blue-400 w-full"
                  />
                  <select class="border border-white bg-transparent p-3 rounded text-white focus:outline-none focus:border-blue-400 w-full">
                    <option value="" class="bg-gray-900">Talk format</option>
                    <option value="keynote" class="bg-gray-900">Keynote</option>
                    <option value="lightning" class="bg-gray-900">Lightning Talk</option>
                    <option value="panel" class="bg-gray-900">Panel</option>
                    <option value="workshop" class="bg-gray-900">Workshop</option>
                  </select>
          
                  <textarea
                    placeholder="Talk description"
                    rows="4"
                    class="border border-white bg-transparent p-3 rounded text-white placeholder-white focus:outline-none focus:border-blue-400 w-full resize-none"
                  ></textarea>
                  
                  <button
                    type="submit"
                    class="bg-white text-black px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
                  >
                    Submit Application
                  </button>
                </form>
              </div>
            </div>
          </ContainerAnimated>
        </ContainerStagger>

        <ContainerStagger className="mt-16 max-w-4xl mx-auto">
          <ContainerAnimated>
            <div class="text-center">
              <div style="min-height: 3rem;">
                <HyperText
                  client:load
                  text="Trusted by Industry Leaders"
                  duration={1000}
                  className="text-2xl md:text-3xl font-raleway font-semibold mb-6 text-white"
                  animateOnLoad={true}
                />
              </div>
              <p class="text-lg text-gray-300 mb-8">
                Trusted by the world's leading Web3 protocols and companies
              </p>
            </div>
            <LogoCarousel client:load columnCount={3} />
          </ContainerAnimated>
        </ContainerStagger>
      </div>
    </ContainerSticky>
  </ContainerScroll>
</section>
