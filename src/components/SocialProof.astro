---
import {
  ContainerScroll,
  ContainerSticky,
  GalleryContainer,
  GalleryCol,
  ContainerStagger,
  ContainerAnimated,
} from "./ContainerScroll";
import SocialMediaIcons from "./SocialMediaIcons.tsx";
import { LogoCarousel } from "./LogoCarousel.tsx";
---

<section class="min-h-screen bg-custom-black">
  <ContainerScroll client:load>
    <ContainerSticky>
      <div class="flex flex-col items-center justify-center h-full">
        <ContainerStagger className="text-center mb-8 mt-8">
          <ContainerAnimated>
            <h2
              class="text-4xl md:text-6xl font-raleway font-bold mb-4 text-white"
            >
              Join the Web3 Community in Chile
            </h2>
          </ContainerAnimated>
          <ContainerAnimated>
            <p class="text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto">
              Join the growing ecosystem of builders, innovators, and leaders
            </p>
          </ContainerAnimated>
          <ContainerAnimated>
            <SocialMediaIcons client:load />
          </ContainerAnimated>
        </ContainerStagger>

        <ContainerStagger className="mt-16 max-w-4xl mx-auto">
          <ContainerAnimated>
            <div class="text-center">
              <h3
                class="text-2xl md:text-3xl font-raleway font-semibold mb-6 text-white"
              >
                Trusted by Industry Leaders
              </h3>
              <p class="text-lg text-gray-300 mb-8">
                Trusted by the world's leading Web3 protocols and companies
              </p>
            </div>
            <LogoCarousel client:load columnCount={3} />
          </ContainerAnimated>
        </ContainerStagger>
      </div>
    </ContainerSticky>
  </ContainerScroll>
</section>
