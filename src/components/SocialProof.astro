---
import {
  ContainerScroll,
  ContainerSticky,
  GalleryContainer,
  GalleryCol,
  ContainerStagger,
  ContainerAnimated,
} from "./ContainerScroll";
---

<section class="min-h-screen bg-custom-black">
  <ContainerScroll client:load>
    <ContainerSticky>
      <div class="flex flex-col items-center justify-center h-full">
        <ContainerStagger className="text-center mb-8">
          <ContainerAnimated>
            <h2
              class="text-4xl md:text-6xl font-raleway font-bold mb-4 text-white"
            >
              Social Proof & Community
            </h2>
          </ContainerAnimated>
          <ContainerAnimated>
            <p class="text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto">
              Join the growing ecosystem of builders, innovators, and leaders
            </p>
          </ContainerAnimated>
        </ContainerStagger>

        <GalleryContainer className="max-w-6xl mx-auto">
          <GalleryCol yRange={["0%", "-20%"]}>
            <ContainerAnimated
              className="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 hover:bg-white/15 transition-all duration-300"
            >
              <div class="text-center">
                <p class="text-4xl md:text-5xl font-bold text-blue-400 mb-2">
                  1,200+
                </p>
                <p class="text-lg text-gray-300">Attendees</p>
              </div>
            </ContainerAnimated>
            <ContainerAnimated
              className="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 hover:bg-white/15 transition-all duration-300"
            >
              <div class="text-center">
                <p class="text-4xl md:text-5xl font-bold text-purple-400 mb-2">
                  40+
                </p>
                <p class="text-lg text-gray-300">Speakers</p>
              </div>
            </ContainerAnimated>
            <ContainerAnimated
              className="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 hover:bg-white/15 transition-all duration-300"
            >
              <div class="text-center">
                <p class="text-4xl md:text-5xl font-bold text-green-400 mb-2">
                  20+
                </p>
                <p class="text-lg text-gray-300">Sponsors</p>
              </div>
            </ContainerAnimated>
          </GalleryCol>

          <GalleryCol yRange={["0%", "10%"]}>
            <ContainerAnimated
              className="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 hover:bg-white/15 transition-all duration-300"
            >
              <div class="text-center">
                <p class="text-4xl md:text-5xl font-bold text-yellow-400 mb-2">
                  15+
                </p>
                <p class="text-lg text-gray-300">DAOs</p>
              </div>
            </ContainerAnimated>
            <ContainerAnimated
              className="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 hover:bg-white/15 transition-all duration-300"
            >
              <div class="text-center">
                <p class="text-4xl md:text-5xl font-bold text-red-400 mb-2">
                  50+
                </p>
                <p class="text-lg text-gray-300">Projects</p>
              </div>
            </ContainerAnimated>
            <ContainerAnimated
              className="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 hover:bg-white/15 transition-all duration-300"
            >
              <div class="text-center">
                <p class="text-4xl md:text-5xl font-bold text-indigo-400 mb-2">
                  100+
                </p>
                <p class="text-lg text-gray-300">Partners</p>
              </div>
            </ContainerAnimated>
          </GalleryCol>

          <GalleryCol yRange={["0%", "-15%"]}>
            <ContainerAnimated
              className="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 hover:bg-white/15 transition-all duration-300"
            >
              <div class="text-center">
                <p class="text-4xl md:text-5xl font-bold text-pink-400 mb-2">
                  $2M+
                </p>
                <p class="text-lg text-gray-300">Investment</p>
              </div>
            </ContainerAnimated>
            <ContainerAnimated
              className="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 hover:bg-white/15 transition-all duration-300"
            >
              <div class="text-center">
                <p class="text-4xl md:text-5xl font-bold text-cyan-400 mb-2">
                  30+
                </p>
                <p class="text-lg text-gray-300">Countries</p>
              </div>
            </ContainerAnimated>
            <ContainerAnimated
              className="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 hover:bg-white/15 transition-all duration-300"
            >
              <div class="text-center">
                <p class="text-4xl md:text-5xl font-bold text-orange-400 mb-2">
                  24/7
                </p>
                <p class="text-lg text-gray-300">Community</p>
              </div>
            </ContainerAnimated>
          </GalleryCol>
        </GalleryContainer>

        <ContainerStagger className="mt-16 max-w-4xl mx-auto">
          <ContainerAnimated>
            <div class="text-center">
              <h3
                class="text-2xl md:text-3xl font-raleway font-semibold mb-6 text-white"
              >
                Trusted by Industry Leaders
              </h3>
              <p class="text-lg text-gray-300 mb-8">
                Join the community that's building the future of Web3 in Latin
                America
              </p>
            </div>
          </ContainerAnimated>
        </ContainerStagger>
      </div>
    </ContainerSticky>
  </ContainerScroll>
</section>
