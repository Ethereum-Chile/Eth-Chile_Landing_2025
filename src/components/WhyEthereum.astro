---
import { HyperText } from "./HyperText.tsx";
import ASCIIProcessor from "./ASCIIProcessor/ASCIIProcessor-clean.jsx";
---

<section
  data-section="why-ethereum"
  class="min-h-screen p-8 flex flex-col justify-center pt-32 pb-48 relative -mt-64 z-10"
  style="
    background: rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
  "
>
  <div class="max-w-7xl mx-auto flex flex-col lg:flex-row items-center gap-12">
    <!-- Left Side: ASCII Processor -->
    <div class="lg:w-1/2">
      <ASCIIProcessor
        client:load
        width="100%"
        height="500px"
        transparent={true}
      />
    </div>

    <!-- Right Side: Title and Content -->
    <div class="lg:w-1/2 text-center lg:text-left">
      <div class="mb-8" style="min-height: 3rem;">
        <HyperText
          client:load
          text="Why Ethereum, Why Now"
          duration={1000}
          className="text-4xl font-raleway font-semibold"
          animateOnLoad={true}
        />
      </div>
      <p class="text-2xl mb-8">Ethereum is now critical infrastructure</p>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="border border-white p-6 rounded-lg">
          <p class="text-3xl font-bold">17M+</p>
          <p class="text-lg">Users</p>
        </div>
        <div class="border border-white p-6 rounded-lg">
          <p class="text-3xl font-bold">$50B+</p>
          <p class="text-lg">TVL</p>
        </div>
        <div class="border border-white p-6 rounded-lg">
          <p class="text-3xl font-bold">Pectra</p>
          <p class="text-lg">Upgrade</p>
        </div>
      </div>
    </div>
  </div>
</section>
