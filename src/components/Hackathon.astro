---
import { HyperText } from "./HyperText.tsx";
import { PixelCard } from "./PixelCard.tsx";
// Hackathon component for ETH Chile 2025
---

<section class="min-h-screen bg-custom-black p-8 flex flex-col justify-center">
  <div class="text-center mb-8">
    <HyperText
      client:load
      text="Hackathons"
      duration={1000}
      className="text-4xl font-raleway font-semibold text-white"
      animateOnLoad={true}
    />
  </div>

  <div class="max-w-6xl mx-auto">
    <!-- Biggest Web3 Hackathon in Chile -->
    <div class="mb-16">
      <h3
        class="text-3xl font-raleway font-semibold mb-6 text-center text-white"
      >
        üèÜ Chile's Biggest Web3 Hackathon
      </h3>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="border border-white p-8 rounded-lg text-white">
          <h4 class="text-2xl font-semibold mb-4">üöÄ Innovation Hub</h4>
          <p class="text-lg mb-4">
            Join the largest Web3 hackathon in Chile, bringing together the
            brightest minds in blockchain, DeFi, and decentralized applications.
          </p>
          <div class="grid grid-cols-2 gap-4 mb-6">
            <div class="text-center">
              <p class="text-3xl font-bold">500+</p>
              <p class="text-sm">Participants</p>
            </div>
            <div class="text-center">
              <p class="text-3xl font-bold">$50K+</p>
              <p class="text-sm">Prize Pool</p>
            </div>
          </div>
          <ul class="space-y-2 text-sm">
            <li>‚Ä¢ 48-hour intensive coding</li>
            <li>‚Ä¢ Expert mentors & workshops</li>
            <li>‚Ä¢ Networking with industry leaders</li>
            <li>‚Ä¢ Real-world problem solving</li>
          </ul>
        </div>

        <div class="border border-white p-8 rounded-lg text-white">
          <h4 class="text-2xl font-semibold mb-4">üéØ Focus Areas</h4>
          <div class="grid grid-cols-1 gap-4">
            <div class="border border-white p-4 rounded text-white">
              <p class="font-semibold">DeFi & Tokenization</p>
              <p class="text-sm">Build the future of finance</p>
            </div>
            <div class="border border-white p-4 rounded text-white">
              <p class="font-semibold">AI & Web3 Integration</p>
              <p class="text-sm">
                Merge artificial intelligence with blockchain
              </p>
            </div>
            <div class="border border-white p-4 rounded text-white">
              <p class="font-semibold">Regulatory Compliance</p>
              <p class="text-sm">Navigate Chile's fintech regulations</p>
            </div>
            <div class="border border-white p-4 rounded text-white">
              <p class="font-semibold">Real-World Applications</p>
              <p class="text-sm">Solve local and global challenges</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Crecimiento Hackathon -->
    <div class="text-center">
      <div class="mb-8">
        <HyperText
          client:load
          text="Crecimiento Hackathon"
          duration={1000}
          className="text-3xl font-raleway font-semibold text-white"
          animateOnLoad={true}
        />
      </div>

      <!-- Centered Image with Pixel Animation -->
      <div class="flex justify-center mb-8">
        <div class="max-w-4xl w-full">
          <PixelCard
            client:load
            variant="default"
            gap={12}
            speed={40}
            className="w-full h-96"
          >
            <img
              src="/imgs/GuY62_cWoAA4shu.jpeg"
              alt="Crecimiento Hackathon"
              class="w-full h-full object-cover rounded-2xl shadow-2xl border border-white/20"
            />
          </PixelCard>
        </div>
      </div>

      <!-- Description below image -->
      <div class="max-w-3xl mx-auto text-center">
        <p class="text-lg text-gray-300 mb-6">
          The Crecimiento Hackathon is ETH Chile's flagship event, designed to
          foster sustainable growth in the Latin American Web3 ecosystem.
        </p>

        <!-- Key stats -->
        <div class="flex justify-center gap-8 mb-8">
          <div class="text-center">
            <p class="text-3xl font-bold text-white">72h</p>
            <p class="text-sm text-gray-400">Duration</p>
          </div>
          <div class="text-center">
            <p class="text-3xl font-bold text-white">$25K</p>
            <p class="text-sm text-gray-400">Prize Pool</p>
          </div>
        </div>

        <!-- CTA Button -->
        <a
          href="https://x.com/crecimientoar"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block bg-white text-black px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
        >
          Register Now
        </a>
      </div>
    </div>
  </div>
</section>
