---
import { HyperText } from "./HyperText.tsx";
import { PixelCard } from "./PixelCard.tsx";
import { HackathonCards } from "./Hackathon.tsx";
// Hackathon component for ETH Chile 2025
---

<section
    class="min-h-screen bg-custom-black px-8 pt-2 pb-8 flex flex-col justify-center"
>
    <div class="text-center mb-8">
        <HyperText
            client:load
            text="Hackathons"
            duration={1000}
            className="text-4xl font-raleway font-semibold text-white"
            animateOnLoad={true}
        />
    </div>

    <div class="max-w-6xl mx-auto">
        <!-- Interactive Hackathon Component -->
        <HackathonCards client:load />

        <!-- Crecimiento Hackathon -->
        <div class="text-center mt-16">
            <div class="mb-8">
                <HyperText
                    client:load
                    text="Crecimiento Hackathon"
                    duration={1000}
                    className="text-3xl font-raleway font-semibold text-white"
                    animateOnLoad={true}
                />
            </div>

            <!-- Centered Image with Pixel Animation -->
            <div class="flex justify-center mb-8">
                <div class="max-w-3xl w-full">
                    <div class="relative group">
                        <PixelCard
                            client:load
                            variant="default"
                            gap={12}
                            speed={40}
                            className="w-full h-[600px]"
                        >
                            <img
                                src="/imgs/GuY62_cWoAA4shu.jpeg"
                                alt="Crecimiento Hackathon"
                                class="w-full h-full object-contain rounded-2xl shadow-2xl"
                            />
                            <!-- CTA Button - Inside PixelCard -->
                            <div
                                class="absolute inset-0 flex items-center justify-center opacity-10 group-hover:opacity-100 transition-opacity duration-300 z-50"
                            >
                                <a
                                    href="https://x.com/crecimientoar"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="bg-white text-black px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition-colors shadow-lg"
                                >
                                    Register Now
                                </a>
                            </div>
                        </PixelCard>
                    </div>
                </div>
            </div>

            <!-- Description below image -->
            <div class="max-w-3xl mx-auto text-center">
                <p class="text-lg text-gray-300 mb-6">
                    The Crecimiento Hackathon is ETH Chile's flagship event,
                    designed to foster sustainable growth in the Latin American
                    Web3 ecosystem.
                </p>

                <!-- Key stats -->
                <div class="flex justify-center gap-8 mb-8">
                    <div class="text-center">
                        <p class="text-3xl font-bold text-white">72h</p>
                        <p class="text-sm text-gray-400">Duration</p>
                    </div>
                    <div class="text-center">
                        <p class="text-3xl font-bold text-white">$25K</p>
                        <p class="text-sm text-gray-400">Prize Pool</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
