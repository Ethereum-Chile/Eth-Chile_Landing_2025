---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import { usePrivy } from "@privy-io/react-auth";
---

<Layout title="Profile - ETHChile 2025">
  <Header />

  <main class="min-h-screen flex flex-col items-center justify-center p-8">
    <div class="max-w-2xl w-full">
      <h1 class="text-4xl font-raleway font-semibold mb-8 text-center">
        Welcome to ETHChile
      </h1>

      <div
        class="bg-white/10 backdrop-blur-sm rounded-lg p-8 border border-white/20"
      >
        <div class="text-center mb-8">
          <div
            class="w-24 h-24 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full mx-auto mb-4 flex items-center justify-center"
          >
            <span class="text-2xl font-bold text-white">ðŸ‘¤</span>
          </div>
          <h2 class="text-2xl font-semibold mb-2">Create Your Profile</h2>
          <p class="text-gray-300">
            Complete your profile to join the ETHChile community
          </p>
        </div>

        <form class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="firstName" class="block text-sm font-semibold mb-2 text-white">First Name *</label>
              <input
                id="firstName"
                name="firstName"
                type="text"
                required
                class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Enter your first name"
              />
            </div>
            <div>
              <label for="lastName" class="block text-sm font-semibold mb-2 text-white">Last Name *</label>
              <input
                id="lastName"
                name="lastName"
                type="text"
                required
                class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Enter your last name"
              />
            </div>
          </div>

          <div>
            <label for="bio" class="block text-sm font-semibold mb-2 text-white">Bio</label>
            <textarea
              id="bio"
              name="bio"
              class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent h-24 resize-none"
              placeholder="Tell us about yourself and your interest in Ethereum..."
            ></textarea>
          </div>

          <div>
            <label for="organization" class="block text-sm font-semibold mb-2 text-white">Organization</label>
            <input
              id="organization"
              name="organization"
              type="text"
              class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="Company, DAO, or project you're associated with"
            />
          </div>

          <div>
            <label for="role" class="block text-sm font-semibold mb-2 text-white">Role *</label>
            <select
              id="role"
              name="role"
              required
              class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
              <option value="">Select your role</option>
              <option value="developer">Developer</option>
              <option value="investor">Investor</option>
              <option value="entrepreneur">Entrepreneur</option>
              <option value="researcher">Researcher</option>
              <option value="student">Student</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="twitter" class="block text-sm font-semibold mb-2 text-white">Twitter</label>
              <input
                id="twitter"
                name="twitter"
                type="text"
                class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="@username"
              />
            </div>
            <div>
              <label for="linkedin" class="block text-sm font-semibold mb-2 text-white">LinkedIn</label>
              <input
                id="linkedin"
                name="linkedin"
                type="url"
                class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="LinkedIn profile URL"
              />
            </div>
          </div>

          <div class="flex justify-center pt-6">
            <button
              type="submit"
              class="bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white px-8 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900"
            >
              Create Profile
            </button>
          </div>
        </form>
      </div>
    </div>
  </main>
</Layout>
